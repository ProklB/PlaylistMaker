<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LayoutStyle">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="MyTitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/text_size_02</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_button_padding</item>
        <item name="iconTint">@color/icon_button</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="android:fontFamily">@font/ys_display_heavy</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MaterialTextViewStyle">
        <item name="android:paddingVertical">@dimen/margin_top_textview</item>
        <item name="android:textColor">@color/text_textview</item>
        <item name="android:textSize">@dimen/text_size_01</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>