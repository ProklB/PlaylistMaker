<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LayoutStyle">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="MyTitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/text_size_02</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_button_padding</item>
        <item name="iconTint">@color/icon_button</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="android:fontFamily">@font/ys_display_heavy</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MaterialTextViewStyle">
        <item name="android:paddingVertical">@dimen/margin_top_textview</item>
        <item name="android:textColor">@color/text_textview</item>
        <item name="android:textSize">@dimen/text_size_01</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="trackNameTextFont">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_trackname</item>
    </style>

    <style name="menuPlaylistText" parent="trackNameTextFont">
        <item name="android:textColor">@color/text_textview</item>
    </style>

    <style name="trackNameText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/icon_button</item>
    </style>

    <style name="trackInfoTextFont">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_trackinfo</item>
    </style>

    <style name="trackInfoText" parent="trackNameText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="trackInfoLabel">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/trackLabel</item>
    </style>

    <style name="trackInfoValue" parent="trackInfoLabel">
        <item name="android:textColor">@color/text_textview</item>
    </style>

    <style name="ButtonUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/placeholder_background</item>
        <item name="android:textColor">@color/placeholder_text</item>
        <item name="android:textSize">@dimen/text_size_05</item>
        <item name="cornerRadius">@dimen/corner_radius_button_update</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonClearHistory" parent="ButtonUpdate">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="library_text_01">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_trackname</item>
    </style>

    <style name="buttonCreatePlaylist" parent="ButtonUpdate">
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="CapsTabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_06</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_06</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/bg_secondary</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="hintTextColor">@color/text_input_stroke_color</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textAppearance">@style/TextInputEditTextAppearance</item>
    </style>

    <style name="trackNamePlaylistTextFont" parent="trackNameTextFont">>
        <item name="android:textColor">@color/text_textview</item>
    </style>

    <style name="add_to_playlist" parent="library_text_01">>
        <item name="android:textColor">@color/text_textview</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TextInputEditTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_textview</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialogText</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
    </style>

    <style name="CustomAlertDialogText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="CustomAlertDialogButton">
        <item name="android:textColor">#3772E7</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CustomAlertDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

</resources>