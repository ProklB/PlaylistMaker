<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settingsLayout_light"
    android:orientation="vertical"
    android:padding="36dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrowback"
        app:titleTextAppearance="@style/MyTitleTextStyle"
        app:title="@string/settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/themesNight"
        app:thumbTint="@color/purple_500"
        app:trackTint="@color/teal_200"
        style ="@style/MaterialTextViewStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/share"
        android:text="@string/share"
        style ="@style/MaterialTextViewStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/support"
        android:text="@string/support"
        style ="@style/MaterialTextViewStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/arrowforward"
        android:text="@string/arrowForward"
        style ="@style/MaterialTextViewStyle"/>

</LinearLayout>

