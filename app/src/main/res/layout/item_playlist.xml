<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlistCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/playsholder_play_light"
        app:shapeAppearanceOverlay="@style/RoundedCorners"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/trackNamePlaylistTextFont"
        app:layout_constraintEnd_toEndOf="@id/playlistCover"
        app:layout_constraintStart_toStartOf="@id/playlistCover"
        app:layout_constraintTop_toBottomOf="@id/playlistCover" />

    <TextView
        android:id="@+id/trackCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/trackNamePlaylistTextFont"
        app:layout_constraintEnd_toEndOf="@id/playlistCover"
        app:layout_constraintStart_toStartOf="@id/playlistCover"
        app:layout_constraintTop_toBottomOf="@id/playlistName" />

</androidx.constraintlayout.widget.ConstraintLayout>