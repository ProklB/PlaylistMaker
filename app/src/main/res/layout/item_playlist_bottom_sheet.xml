<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="13dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_newlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/trackNameTextFont"
        app:layout_constraintBottom_toTopOf="@id/trackCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlistCover"
        app:layout_constraintTop_toTopOf="@+id/playlistCover"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/trackCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/trackInfoTextFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlistCover"
        app:layout_constraintTop_toBottomOf="@id/playlistName"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>